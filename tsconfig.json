{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "",
    "outDir": ".dev",
    "rootDirs": ["./config"],
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "config/global.d.ts"],
    "lib": ["ES2017", "dom"]
  },
  "include": ["./config/**/*.ts", "./src/test.ts", "config/global.d.ts"],
  "exclude": ["node_modules"]
}
